# ============================================
# FitLife Gym Membership System - .htaccess
# Apache Server Configuration
# ============================================

# Disable directory listing
Options -Indexes

# Prevent access to hidden files (starting with .)
<FilesMatch "^\.">
    Order allow,deny
    Deny from all
</FilesMatch>

# Protect sensitive files
<FilesMatch "^(\.env|\.git|\.htaccess|\.htpasswd|composer\.json|composer\.lock|package\.json|package\-lock\.json)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Protect database and configuration files
<FilesMatch "\.(sql|db|ini|conf|config|log)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Prevent access to PHP files in includes directory
<IfModule mod_rewrite.c>
    RewriteEngine On

    # Redirect all requests to index.php if file doesn't exist
    # This provides basic URL routing
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)$ index.php?url=$1 [QSA,L]

    # Force HTTPS (uncomment for production)
    # RewriteCond %{HTTPS} !=on
    # RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
</IfModule>

# Security Headers
<IfModule mod_headers.c>
    # Prevent MIME type sniffing
    Header set X-Content-Type-Options "nosniff"

    # Enable XSS protection
    Header set X-XSS-Protection "1; mode=block"

    # Prevent framing of the site
    Header set X-Frame-Options "SAMEORIGIN"

    # Referrer Policy
    Header set Referrer-Policy "strict-origin-when-cross-origin"

    # Content Security Policy (adjust as needed)
    # Header set Content-Security-Policy "default-src 'self'; script-src 'self' https://cdnjs.cloudflare.com; style-src 'self' https://cdnjs.cloudflare.com; img-src 'self' https://images.unsplash.com data:; font-src 'self' https://cdnjs.cloudflare.com;"
</IfModule>

# Set default charset
AddDefaultCharset UTF-8

# PHP settings (if allowed by host)
<IfModule mod_php.c>
    # Disable PHP errors in production
    php_flag display_errors off
    php_flag log_errors on

    # Increase memory limit if needed
    php_value memory_limit 128M

    # Increase execution time
    php_value max_execution_time 300

    # Increase file upload size
    php_value upload_max_filesize 10M
    php_value post_max_size 12M
</IfModule>

# Cache control for static assets
<IfModule mod_expires.c>
    ExpiresActive On

    # Images
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/webp "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"

    # CSS and JavaScript
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"

    # Fonts
    ExpiresByType font/woff2 "access plus 1 year"
    ExpiresByType font/woff "access plus 1 year"
    ExpiresByType font/ttf "access plus 1 year"

    # HTML (no caching)
    ExpiresByType text/html "access plus 0 seconds"
</IfModule>

# Compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/css text/javascript application/javascript application/json
</IfModule>

# Custom error pages (optional)
# ErrorDocument 404 /404.php
# ErrorDocument 403 /403.php
# ErrorDocument 500 /500.php

# Allow access to style.css and other public assets
<FilesMatch "\.(css|js|jpg|jpeg|png|gif|ico|svg|woff|woff2|ttf|eot)$">
    Order allow,deny
    Allow from all
</FilesMatch>

# Prevent access to PHP files in includes directory
<Files "includes/*.php">
    Order allow,deny
    Deny from all
</Files>

# Allow access to db.php from PHP scripts only (not directly via browser)
<Files "db.php">
    Order allow,deny
    Deny from all
</Files>
